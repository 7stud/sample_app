<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :name, "Name:"%>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email:" %>
  </div>
  <div>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password (at least 6 characters):" %>
  </div>
  <div>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password confirmation:" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


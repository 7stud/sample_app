<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :name, "Name:" %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email:" %>
  </div>
  <div>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password (at least 6 characters):" %>
  </div>
  <div>
    <%= f.password_field :password %>
  </div>
  
  <%= render 'users/password_confirmation_fix', :f => f, :object => f.object %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <div><%= f.label :email, "Email:" %></div>
    <div><%= f.text_field :email %></div>
  </div>
  <div class="field">
    <div><%= f.label :password, "Password:" %></div>
    <div><%= f.password_field :password %></div>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up.", signup_path %></p>
